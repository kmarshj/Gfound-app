<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/epd_child_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_viec_icon"
        android:layout_height="30dp"
        android:layout_width="30dp" />

    <TextView
        android:id="@+id/tv_viec_operation"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/jwbb_epd_item_height"
        android:textColor="@color/epd_text_normal"
        android:textSize="@dimen/jwbb_text_size" />

    <ImageView
        android:id="@+id/iv_viec_selected"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</LinearLayout>
