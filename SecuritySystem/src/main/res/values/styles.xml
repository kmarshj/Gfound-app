<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- 主页面 -->
    <style name="main_navi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_navi</item>
        <item name="android:textSize">@dimen/main_navi_size</item>
        <item name="android:background">@drawable/main_navi_bg</item>
        <item name="android:paddingTop">@dimen/main_navi_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/main_navi_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/main_navi_padding_horzontal</item>
        <item name="android:paddingRight">@dimen/main_navi_padding_horzontal</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
